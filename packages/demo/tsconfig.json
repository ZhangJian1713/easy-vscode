{
  "compilerOptions": {
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "declaration": true,
    "lib": ["es5", "es2015", "es2016", "es2017", "dom"],
    "moduleResolution": "node",
    "noImplicitAny": false,
    "noUnusedLocals": true,
    "outDir": "./dist",
    "preserveConstEnums": true,
    "removeComments": true,
    "baseUrl": "src",
    "rootDirs": ["src"],
    "jsx": "react",
    "sourceMap": true,
    "strictNullChecks": false,
    "target": "es6",
    "skipLibCheck": true,
    "importHelpers": true,
    "noEmit": false,
    "allowSyntheticDefaultImports": true
  },
  "exclude": ["dist"],
  "include": ["src/**/*"]
}
